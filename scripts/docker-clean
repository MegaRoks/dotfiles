#!/bin/zsh

echo "‚ö†Ô∏è  –≠—Ç–æ —É–¥–∞–ª–∏—Ç –í–°–ï –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä—ã, –æ–±—Ä–∞–∑—ã, volumes –∏ —Å–µ—Ç–∏!"
read "?–ü—Ä–æ–¥–æ–ª–∂–∏—Ç—å? (y/N): " confirm

if [[ $confirm == [yY] || $confirm == [yY][eE][sS] ]]; then
    echo "üî¥ –û—Å—Ç–∞–Ω–æ–≤–∫–∞ –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä–æ–≤..."
    docker stop $(docker ps -aq) 2>/dev/null
    
    echo "üóëÔ∏è  –£–¥–∞–ª–µ–Ω–∏–µ –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä–æ–≤..."
    docker rm $(docker ps -aq) 2>/dev/null
    
    echo "üßπ –û—á–∏—Å—Ç–∫–∞ —Å–∏—Å—Ç–µ–º—ã..."
    docker system prune -a --volumes -f
    
    echo "‚úÖ Docker –ø–æ–ª–Ω–æ—Å—Ç—å—é –æ—á–∏—â–µ–Ω!"
else
    echo "‚ùå –û—Ç–º–µ–Ω–µ–Ω–æ"
fi
