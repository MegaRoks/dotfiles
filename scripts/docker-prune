#!/bin/zsh

echo "ğŸ§¹ Removing stopped containers..."

STOPPED=$(docker ps -aq -f status=exited -f status=created)

if [ -z "$STOPPED" ]; then
    echo "â„¹ï¸  No stopped containers found"
    exit 0
fi

echo "ğŸ“‹ Found stopped containers: $(echo $STOPPED | wc -w)"
read "?Continue? (y/N): " confirm

if [[ $confirm == [yY] || $confirm == [yY][eE][sS] ]]; then
    docker rm $STOPPED 2>/dev/null
    echo "âœ… Stopped containers removed!"
else
    echo "âŒ Cancelled"
fi
